<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Орлов Роман 333"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txt_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter smth"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/input_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1" />

        <CheckBox
            android:id="@+id/input_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="on_btndialog_click"
                android:text="@string/button_dialog"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/buttonOpenDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="on_dialog_click"
                android:text="@string/button_showdialog"
                android:textSize="14dp" />

            <Button
                android:id="@+id/buttonExitApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="on_exit_click"
                android:text="@string/button_exitapp"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>